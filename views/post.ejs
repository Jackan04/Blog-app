<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <%- include("./partials/nav") %>
    <article class="post">
      <div class="post-header">
        <h2><%= post.title %></h2>
        <div class="icon-container">
          <a href="/post/update/<%= post._id %>">
            <i class="fa-solid fa-pen secondary"></i>
          </a>
          <form action="/post/<%= post._id %>" method="POST">
            <button
              class="btn-danger"
              type="submit"
              onclick="return confirm('Are you sure?');"
            >
              <i class="fa fa-trash"></i>
            </button>
          </form>
        </div>
      </div>
      <p class="secondary"><%= post.createdAt %></p>
      <p><%= post.body %></p>
    </article>
    <%- include("./partials/footer") %>
  </body>
</html>
