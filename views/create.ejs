<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <%- include("./partials/nav") %>
    <main class="create-post">
      <h2 class="heading">New Blog Post</h2>
      <form class="create-form" action="/create-post" method="POST">
        <div class="input-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            required
            autocomplete="off"
          />
        </div>
        <div class="input-group">
          <label for="preview">Preview</label>
          <input
            type="text"
            id="preview"
            name="preview"
            required
            autocomplete="off"
          />
        </div>
        <div class="input-group">
          <label for="body">Body</label>
          <textarea
            id="body"
            name="body"
            required
            autocomplete="off"
          ></textarea>
        </div>

        <button class="btn-default">Submit</button>
      </form>
    </main>
    <%- include("./partials/footer") %>
  </body>
</html>
